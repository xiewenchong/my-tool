<view class="list-wrap"><text class="title">{{title}}</text><view data-event-opts="{{[['tap',[['onClickViewAllInner',['$event']]]]]}}" class="view-all" bindtap="__e"><text>查看更多</text><text class="iconfont saasjiantou-you"></text></view><scroll-view style="width:100%;white-space:nowrap;" scroll-x="true"><block wx:for="{{items}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['onClickItemInner',['$0'],[[['items','',index]]]]]]]}}" class="{{['item',index==items.length-1?'last':'']}}" bindtap="__e"><image class="img" src="{{item.imgUrl}}"></image><view class="name">{{item.name}}</view><view hidden="{{!(item.showAddr)}}" class="addr-wrap"><text>{{item.area}}</text><view class="addr-dot"></view><text>{{item.distance}}</text></view><view hidden="{{!(item.showDesc)}}" class="desc-wrap"><text>{{item.desc}}</text></view><view hidden="{{!(item.showPrice)}}" class="price-wrap"><text><text class="price-prefix">￥</text><text class="price-val">{{item.price}}</text><text hidden="{{!(item.showRawPrice)}}" class="price-raw">{{"￥"+item.rawPrice}}</text></text></view><view hidden="{{!(item.showLocation)}}" class="location-wrap1"><text class="iconfont saasdidian"></text><text>{{item.area}}</text></view><view hidden="{{!(item.showLevel)}}" class="level-wrap"><image class="star-icon" src="{{starUrl}}" mode="scaleToFill"></image><view><text class="level-text">{{item.level}}</text></view></view></view></block></scroll-view></view>